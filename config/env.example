# OmniTarget Pipeline - Environment Configuration
# Copy this file to .env in the project root and customize for your environment

# ========================================
# ENVIRONMENT SETTINGS
# ========================================
OMNITARGET_ENV=development  # Options: development, staging, production, testing

# ========================================
# MCP SERVER CONFIGURATION
# ========================================
MCP_BASE_PATH=/Users/omara.soliman/Documents/mcp/
MCP_CONFIG_PATH=config/mcp_servers.json
MCP_TIMEOUT=30
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1

# ========================================
# PERFORMANCE SETTINGS
# ========================================
MAX_WORKERS=4
CHUNK_SIZE=1000
MEMORY_LIMIT_GB=2.0

# ========================================
# CACHING CONFIGURATION
# ========================================
CACHE_ENABLED=true
CACHE_TTL=3600
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/omnitarget.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ========================================
# OUTPUT CONFIGURATION
# ========================================
OUTPUT_DIR=results
TEMP_DIR=tmp

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_PARALLEL_PROCESSING=true
ENABLE_MEMORY_OPTIMIZATION=true
ENABLE_BENCHMARKING=false

# ========================================
# SCIENTIFIC PARAMETERS
# ========================================
MIN_CONFIDENCE_SCORE=0.5
MIN_INTERACTION_SCORE=0.7
MAX_NETWORK_SIZE=10000

# ========================================
# PRODUCTION SETTINGS (when OMNITARGET_ENV=production)
# ========================================
# LOG_LEVEL=WARNING
# REDIS_ENABLED=true
# ENABLE_BENCHMARKING=false
# MCP_MAX_RETRIES=5

